{
	"extends": "./tsconfig.json",
	"compilerOptions": {
		"noEmit": false,
		"emitDeclarationOnly": true,
		"declaration": true,
		"declarationMap": false,
		"outDir": "dist",
		"module": "ESNext",
		"target": "ESNext",
		"verbatimModuleSyntax": true
	},
	"include": ["src", "index.ts"],
	"exclude": ["node_modules", "dist", "tests", "scripts", "**/*.test.ts"]
}
