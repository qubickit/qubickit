{
	"$schema": "https://biomejs.dev/schemas/2.3.8/schema.json",
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"suspicious": {
				"noExplicitAny": "off"
			}
		}
	},
	"files": {
		"includes": [
			"src/**/*",
			"tests/**/*",
			"scripts/**/*.cjs",
			"index.ts",
			"biome.json",
			"package.json",
			"README.md",
			".better-commits.json"
		],
		"ignoreUnknown": true
	},
	"formatter": {
		"enabled": true
	}
}
